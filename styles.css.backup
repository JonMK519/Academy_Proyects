/* ===================================
   Business Case Analyzer Pro
   Professional Corporate Design
   Clean, Minimal, Executive Style
   =================================== */

/* Import Professional Fonts */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');

/* CSS Variables for Professional Corporate Theme */
:root {
    /* Professional Color Palette */
    --primary-color: #2563EB;        /* Elegant Blue */
    --primary-dark: #1E40AF;
    --primary-light: #3B82F6;
    
    --secondary-color: #059669;      /* Financial Green */
    --secondary-dark: #047857;
    
    --success-color: #059669;
    --warning-color: #F59E0B;
    --danger-color: #DC2626;
    --info-color: #0EA5E9;
    
    /* Neutral Colors */
    --white: #FFFFFF;
    --gray-50: #F8F9FA;
    --gray-100: #F3F4F6;
    --gray-200: #E5E7EB;
    --gray-300: #D1D5DB;
    --gray-400: #9CA3AF;
    --gray-500: #6B7280;
    --gray-600: #4B5563;
    --gray-700: #374151;
    --gray-800: #1F2937;
    --gray-900: #111827;
    
    /* Text Colors */
    --text-primary: #1A1A1A;
    --text-secondary: #4A5568;
    --text-muted: #6B7280;
    --text-light: #9CA3AF;
    
    /* Background Colors */
    --bg-primary: #FFFFFF;
    --bg-secondary: #F8F9FA;
    --bg-card: #FFFFFF;
    
    /* Professional Shadows */
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    
    /* Border & Radius */
    --border-radius: 8px;
    --border-radius-lg: 12px;
    --border-color: #E5E7EB;
    
    /* Transitions */
    --transition: all 0.2s ease;
    --transition-smooth: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    
    /* Spacing */
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 1.5rem;
    --spacing-lg: 2rem;
    --spacing-xl: 3rem;
}

/* Reset & Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background: var(--bg-secondary);
    min-height: 100vh;
    color: var(--text-primary);
    line-height: 1.6;
    font-size: 16px;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

main {
    max-width: 1280px;
    margin: 0 auto;
    padding: 2rem 1rem;
}

/* Header Styles - Professional & Clean */
header {
    background: var(--white);
    border-bottom: 1px solid var(--border-color);
    padding: 1.5rem 2rem;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: var(--shadow-sm);
}

.header-container {
    max-width: 1280px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
}

.header-brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.header-brand h1 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    letter-spacing: -0.02em;
}

.header-brand p {
    font-size: 0.875rem;
    color: var(--text-secondary);
    font-weight: 400;
}

/* Language Toggle */
.language-toggle {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    background: var(--gray-100);
    padding: 0.25rem;
    border-radius: var(--border-radius);
}

.language-toggle button {
    padding: 0.5rem 1rem;
    border: none;
    background: transparent;
    color: var(--text-secondary);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    border-radius: 6px;
    transition: var(--transition);
    font-family: 'Inter', sans-serif;
}

.language-toggle button.active {
    background: var(--white);
    color: var(--primary-color);
    box-shadow: var(--shadow-sm);
}

.language-toggle button:hover:not(.active) {
    color: var(--text-primary);
}

/* Section Styles - Professional Cards */
section {
    background: var(--white);
    border-radius: var(--border-radius-lg);
    padding: 2.5rem;
    margin-bottom: 2rem;
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--border-color);
    transition: var(--transition-smooth);
}

section:hover {
    box-shadow: var(--shadow-md);
}

section h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

section h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 2rem 0 1rem;
}

/* Dashboard Grid */
.dashboard {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}

/* Metric Cards - Professional & Elegant */
.metric-card {
    background: var(--white);
    border: 1px solid var(--border-color);
    padding: 1.5rem;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-sm);
    transition: var(--transition-smooth);
    position: relative;
    overflow: hidden;
}

.metric-card::before {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 4px;
    height: 100%;
    background: var(--primary-color);
    border-radius: 4px 0 0 4px;
}

.metric-card.success::before {
    background: var(--success-color);
}

.metric-card.warning::before {
    background: var(--warning-color);
}

.metric-card.danger::before {
    background: var(--danger-color);
}

.metric-card.info::before {
    background: var(--info-color);
}

.metric-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: var(--gray-300);
}

.metric-label {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.metric-value {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    line-height: 1;
}

.metric-change {
    font-size: 0.875rem;
    color: var(--text-muted);
    font-weight: 400;
}

/* Form Styles - Professional */
.form-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-bottom: 1.5rem;
}

.form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

label {
    color: var(--text-primary);
    font-weight: 500;
    font-size: 0.875rem;
    letter-spacing: 0;
}

input, select, textarea {
    padding: 0.75rem 1rem;
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius);
    font-size: 0.9375rem;
    transition: var(--transition);
    background: var(--white);
    color: var(--text-primary);
    font-family: 'Inter', sans-serif;
}

input:focus, select:focus, textarea:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
}

input:hover, select:hover, textarea:hover {
    border-color: var(--gray-400);
}

textarea {
    resize: vertical;
    min-height: 100px;
}

/* Button Styles - Professional & Clean */
button {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: var(--border-radius);
    font-size: 0.9375rem;
    font-weight: 500;
    cursor: pointer;
    transition: var(--transition-smooth);
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    justify-content: center;
    font-family: 'Inter', sans-serif;
}

button.btn-primary {
    background: var(--primary-color);
    color: white;
    box-shadow: var(--shadow-sm);
}

button.btn-primary:hover {
    background: var(--primary-dark);
    box-shadow: var(--shadow-md);
    transform: translateY(-1px);
}

button.btn-primary:active {
    transform: translateY(0);
}

button.btn-secondary {
    background: var(--white);
    color: var(--text-primary);
    border: 1px solid var(--border-color);
    box-shadow: var(--shadow-sm);
}

button.btn-secondary:hover {
    background: var(--gray-50);
    border-color: var(--gray-300);
}

button.btn-success {
    background: var(--success-color);
    color: white;
    box-shadow: var(--shadow-sm);
}

button.btn-success:hover {
    background: var(--secondary-dark);
    box-shadow: var(--shadow-md);
    transform: translateY(-1px);
}

button.btn-export {
    background: var(--primary-color);
    color: white;
    padding: 1rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    box-shadow: var(--shadow-md);
}

button.btn-export:hover {
    background: var(--primary-dark);
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
}

button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.button-group {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 1.5rem;
}

/* Chart Container - Glassmorphism */
.chart-container {
    position: relative;
    height: 400px;
    margin: 20px 0;
    padding: 25px;
    background: rgba(255, 255, 255, 0.12);
    backdrop-filter: blur(15px);
    border-radius: 15px;
    box-shadow: var(--shadow-lg), inset 0 0 40px rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(255, 255, 255, 0.2);
    transition: var(--transition);
}

.chart-container:hover {
    box-shadow: var(--shadow-neon), inset 0 0 60px rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.3);
}

/* Tabs - Estilo Futurista con Bordes Luminosos */
.tabs {
    display: flex;
    gap: 15px;
    margin-bottom: 25px;
    border-bottom: none;
    padding: 10px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 15px;
    backdrop-filter: blur(10px);
}

.tab {
    padding: 14px 28px;
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    color: rgba(255, 255, 255, 0.8);
    cursor: pointer;
    transition: var(--transition);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 0.9em;
    position: relative;
    overflow: hidden;
}

.tab::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--gradient-pink-purple);
    transform: scaleX(0);
    transition: transform 0.3s;
}

.tab.active {
    color: white;
    background: var(--gradient-pink-purple);
    border-color: rgba(255, 255, 255, 0.4);
    box-shadow: 0 0 20px rgba(131, 56, 236, 0.5);
}

.tab.active::before {
    transform: scaleX(1);
}

.tab:hover {
    color: white;
    background: var(--gradient-blue-cyan);
    border-color: rgba(255, 255, 255, 0.3);
    box-shadow: 0 0 15px rgba(0, 217, 255, 0.4);
    transform: translateY(-3px);
}

.tab-content {
    display: none;
}

.tab-content.active {
    display: block;
    animation: fadeIn 0.3s ease-in;
}

/* Recommendations - Estilo Vibrante */
.recommendations {
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(15px);
    padding: 25px;
    border-radius: var(--border-radius);
    border-left: 5px solid transparent;
    border-image: var(--gradient-pink-purple) 1;
    margin: 25px 0;
    box-shadow: inset 0 0 30px rgba(131, 56, 236, 0.1);
}

.recommendation-item {
    padding: 18px;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border-radius: 12px;
    margin-bottom: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: var(--transition);
    position: relative;
    overflow: hidden;
}

.recommendation-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 4px;
    height: 100%;
    background: var(--gradient-pink-purple);
    transform: scaleY(0);
    transition: transform 0.3s;
}

.recommendation-item:hover {
    transform: translateX(8px);
    box-shadow: 0 6px 20px rgba(131, 56, 236, 0.3);
    border-color: rgba(255, 255, 255, 0.3);
}

.recommendation-item:hover::before {
    transform: scaleY(1);
}

.recommendation-item:last-child {
    margin-bottom: 0;
}

.recommendation-item strong {
    color: white;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
}

.recommendation-icon {
    display: inline-block;
    width: 28px;
    height: 28px;
    margin-right: 12px;
    font-size: 1.5em;
    filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.5));
}

/* Alerts & Messages */
.alert {
    padding: 15px 20px;
    border-radius: 8px;
    margin: 15px 0;
    display: flex;
    align-items: center;
    gap: 10px;
    animation: slideIn 0.3s ease-out;
}

.alert.success {
    background: rgba(0, 212, 170, 0.1);
    border-left: 4px solid var(--success-color);
    color: #00b894;
}

.alert.warning {
    background: rgba(254, 202, 87, 0.1);
    border-left: 4px solid var(--warning-color);
    color: #e17055;
}

.alert.danger {
    background: rgba(255, 107, 107, 0.1);
    border-left: 4px solid var(--danger-color);
    color: #d63031;
}

.alert.info {
    background: rgba(79, 172, 254, 0.1);
    border-left: 4px solid var(--info-color);
    color: #0984e3;
}

/* Loading Spinner - Animación con Partículas */
.loading {
    display: inline-block;
    width: 20px;
    height: 20px;
    border: 3px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    border-top-color: var(--neon-cyan);
    border-right-color: var(--neon-pink);
    animation: spin 0.8s linear infinite;
    box-shadow: 0 0 15px rgba(131, 56, 236, 0.5);
}

.loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    backdrop-filter: blur(15px);
}

.loading-spinner {
    width: 80px;
    height: 80px;
    border: 6px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    border-top-color: var(--neon-pink);
    border-right-color: var(--neon-purple);
    border-bottom-color: var(--neon-cyan);
    animation: spin 1s linear infinite;
    box-shadow: 0 0 40px rgba(131, 56, 236, 0.6), 0 0 80px rgba(255, 0, 110, 0.4), inset 0 0 20px rgba(131, 56, 236, 0.3);
}

.loading-spinner::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 50px;
    height: 50px;
    border: 4px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    border-left-color: var(--neon-green);
    animation: spin 0.7s linear infinite reverse;
}

/* Progress Bar */
.progress-bar {
    width: 100%;
    height: 8px;
    background: #e2e8f0;
    border-radius: 10px;
    overflow: hidden;
    margin: 10px 0;
}

.progress-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--primary-color) 0%, var(--accent-color) 100%);
    transition: width 0.5s ease;
    border-radius: 10px;
}

/* Tooltip */
.tooltip {
    position: relative;
    display: inline-block;
    cursor: help;
}

.tooltip .tooltiptext {
    visibility: hidden;
    width: 200px;
    background-color: rgba(0, 0, 0, 0.9);
    color: white;
    text-align: center;
    padding: 8px;
    border-radius: 6px;
    position: absolute;
    z-index: 100;
    bottom: 125%;
    left: 50%;
    margin-left: -100px;
    opacity: 0;
    transition: opacity 0.3s;
    font-size: 0.9em;
}

.tooltip:hover .tooltiptext {
    visibility: visible;
    opacity: 1;
}

/* Scenario Cards - Glassmorphism con Colores Vibrantes */
.scenario-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 25px;
    margin: 25px 0;
}

.scenario-card {
    background: rgba(255, 255, 255, 0.12);
    backdrop-filter: blur(15px);
    border: 2px solid rgba(255, 255, 255, 0.25);
    border-radius: var(--border-radius);
    padding: 28px;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
}

.scenario-card::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
    animation: scenarioGlow 6s ease-in-out infinite;
}

@keyframes scenarioGlow {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(-20%, 20%) scale(1.1); }
}

.scenario-card:hover {
    transform: translateY(-8px) scale(1.03);
    border-color: rgba(255, 255, 255, 0.4);
}

.scenario-card.best {
    border-color: rgba(57, 255, 20, 0.5);
    box-shadow: var(--shadow-neon-green);
    background: linear-gradient(135deg, rgba(57, 255, 20, 0.1) 0%, rgba(255, 255, 255, 0.08) 100%);
}

.scenario-card.best:hover {
    box-shadow: var(--shadow-neon-green), 0 0 50px rgba(57, 255, 20, 0.4);
}

.scenario-card.worst {
    border-color: rgba(255, 0, 110, 0.5);
    box-shadow: 0 0 20px rgba(255, 0, 110, 0.4);
    background: linear-gradient(135deg, rgba(255, 0, 110, 0.1) 0%, rgba(255, 255, 255, 0.08) 100%);
}

.scenario-card.worst:hover {
    box-shadow: 0 0 30px rgba(255, 0, 110, 0.6), 0 0 60px rgba(255, 0, 110, 0.3);
}

.scenario-card.expected {
    border-color: rgba(0, 217, 255, 0.5);
    box-shadow: var(--shadow-neon-blue);
    background: linear-gradient(135deg, rgba(0, 217, 255, 0.1) 0%, rgba(255, 255, 255, 0.08) 100%);
}

.scenario-card.expected:hover {
    box-shadow: var(--shadow-neon-blue), 0 0 50px rgba(0, 217, 255, 0.4);
}

.scenario-title {
    font-size: 1.4em;
    font-weight: 800;
    margin-bottom: 18px;
    color: white;
    text-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
    position: relative;
    z-index: 1;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.scenario-metrics {
    display: flex;
    flex-direction: column;
    gap: 12px;
    position: relative;
    z-index: 1;
}

.scenario-metric {
    display: flex;
    justify-content: space-between;
    padding: 12px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.15);
    color: rgba(255, 255, 255, 0.9);
    font-weight: 600;
    transition: var(--transition);
}

.scenario-metric:hover {
    padding-left: 10px;
    border-bottom-color: rgba(255, 255, 255, 0.3);
}

.scenario-metric:last-child {
    border-bottom: none;
}

.scenario-metric strong {
    color: white;
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
    font-size: 1.1em;
}

/* Animations */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes slideIn {
    from {
        transform: translateX(-100%);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}

@keyframes pulse {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0.5;
    }
}

/* Responsive Design */
@media (max-width: 768px) {
    body {
        padding: 10px;
    }
    
    header h1 {
        font-size: 1.8em;
    }
    
    .dashboard {
        grid-template-columns: 1fr;
    }
    
    .form-grid {
        grid-template-columns: 1fr;
    }
    
    .scenario-grid {
        grid-template-columns: 1fr;
    }
    
    .chart-container {
        height: 300px;
        padding: 10px;
    }
    
    section {
        padding: 20px;
    }
    
    .metric-value {
        font-size: 2em;
    }
    
    .button-group {
        flex-direction: column;
    }
    
    button {
        width: 100%;
    }
}

@media (max-width: 480px) {
    header {
        padding: 20px;
    }
    
    header h1 {
        font-size: 1.5em;
    }
    
    section h2 {
        font-size: 1.4em;
    }
    
    .metric-card {
        padding: 20px;
    }
}

/* Print Styles */
@media print {
    body {
        background: white;
        padding: 0;
    }
    
    header {
        background: var(--primary-color);
    }
    
    section {
        break-inside: avoid;
        box-shadow: none;
        border: 1px solid #ddd;
    }
    
    button {
        display: none;
    }
}

/* Utility Classes */
.text-center {
    text-align: center;
}

.text-right {
    text-align: right;
}

.mt-1 { margin-top: 10px; }
.mt-2 { margin-top: 20px; }
.mt-3 { margin-top: 30px; }

